# ==============================================
# COLDIQ EMAIL OPTIMIZER - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your actual values

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Environment mode (development or production)
NODE_ENV=development

# Server port
PORT=3000

# ==============================================
# AI PROVIDER CONFIGURATION
# ==============================================

# AI provider to use: 'anthropic' or 'openrouter'
# - anthropic: Use Anthropic Claude API directly
# - openrouter: Use OpenRouter to access multiple LLM providers
AI_PROVIDER=openrouter

# Anthropic API Key (required if AI_PROVIDER=anthropic)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenRouter API Key (required if AI_PROVIDER=openrouter)
# Get your key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-api-key-here

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Enable file logging (true/false)
# When true, creates detailed log files in ./logs directory
ENABLE_FILE_LOGGING=true

# Enable console logs (true/false)
# When true, outputs logs to console/terminal
ENABLE_CONSOLE_LOGS=true

# Log detailed prompts and responses (true/false)
# When true, saves full prompt/response content to log files
# WARNING: This can create large log files. Set to false in production unless debugging.
LOG_DETAILED_PROMPTS=true

# ==============================================
# ADMIN/SETTINGS PANEL
# ==============================================

# Show admin settings panel (true/false)
# When false, hides the settings cog button in the UI
# Use false for production deployments where you don't want users changing settings
SHOW_ADMIN_PANEL=true
